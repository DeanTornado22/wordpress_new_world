{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "nw-white",
          "color": "rgb(255,255,255)",
          "name": "New World White"
        },
        {
          "slug": "nw-gray-100",
          "color": "rgb(243 244 246)",
          "name": "New World Gray 100"
        },
        {
          "slug": "nw-gray-200",
          "color": "rgb(229 231 235)",
          "name": "New World Gray 200"
        },
        {
          "slug": "nw-gray-300",
          "color": "rgb(209 213 219)",
          "name": "New World Gray 300"
        },
        {
          "slug": "nw-gray-400",
          "color": "rgb(156 163 175)",
          "name": "New World Gray 400"
        },
        {
          "slug": "nw-gray-500",
          "color": "rgb(107 114 128)",
          "name": "New World Gray 500"
        },
        {
          "slug": "nw-gray-600",
          "color": "rgb(75 85 99)",
          "name": "New World Gray 600"
        },
        {
          "slug": "nw-gray-700",
          "color": "rgb(55 65 81)",
          "name": "New World Gray 700"
        },
        {
          "slug": "nw-gray-800",
          "color": "rgb(31 41 55)",
          "name": "New World Gray 800"
        },
        {
          "slug": "nw-gray-900",
          "color": "rgb(17 24 39)",
          "name": "New World Gray 900"
        },
        {
          "slug": "nw-primary",
          "color": "rgb(239 68 68)",
          "name": "New World Primary"
        },
        {
          "slug": "nw-accent",
          "color": "rgb(67 56 202)",
          "name": "New World Accent"
        },
        {
          "slug": "nw-success",
          "color": "rgb(52 211 153)",
          "name": "New World Success"
        },
        {
          "slug": "nw-info",
          "color": "rgb(96 165 250)",
          "name": "New World Info"
        },
        {
          "slug": "nw-warning",
          "color": "rgb(251 146 60)",
          "name": "New World Warning"
        },
        {
          "slug": "nw-danger",
          "color": "rgb(236 72 153)",
          "name": "New World Danger"
        }
      ],
      "background": true,
      "text": true,
      "link": true,
      "custom": true,
      "duotone": [
        {
          "slug": "nw-pink-sunset",
          "colors": ["#11245e", "#dc4379"],
          "name": "New World Sunset"
        }
      ],
      "defaultGradients": false,
      "gradients": [
        {
          "slug": "nw-summer-dog",
          "name": "New World Summer Dog",
          "gradient": "linear-gradient(#a8ff78,#78ffd6)"
        }
      ]
    },
    "blocks": {
      "core/site-title": {
        "color": {
          "defaultPalette": true,
          "palette": [
            {
              "slug": "nw-primary",
              "color": "#ef4444",
              "name": "New World Primary"
            }
          ],
          "link": true,
          "custom": true,
          "gradients": [],
          "customGradient": false
        },
        "typography": {
          "fontFamilies": [
            {
              "fontFamily": "Pacifico, sans-serif",
              "slug": "nw-pacifico",
              "name": "New World Pacifico"
            }
          ]
        }
      },
      "core/cover": {
        "color": {
          "duotone": [],
          "customDuotone": false
        }
      },
      "core/preformatted": {
        "typography": {
          "fontSizes": [],
          "customFontSize": false
        }
      }
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Rubik, sans-serif",
          "slug": "nw-rubik",
          "name": " New World Rubik"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.75rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1.25rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "2.25rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "3rem",
          "name": "Extra Large"
        },
        {
          "slug": "gigantic",
          "size": "3.75rem",
          "name": "Gigantic"
        }
      ],
      "lineHeight": true,
      "dropCap": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "letterSpacing": true,
      "textDecoration": true
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1100px"
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "blockGap": true
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--nw-primary)",
      "background": "var(--wp--preset--color--nw-white)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--nw-primary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "color": {
          "gradient": "var(--wp--preset--gradient--nw-summer-dog)"
        }
      },
      "core/pullquote": {
        "border": {
          "width": "2px",
          "radius": "2px",
          "style": "solid",
          "color": "var(--wp--preset--color-nw-primary)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--nw-pacifico)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--nw-rubik)",
      "fontSize": "16px",
      "fontStyle": "normal",
      "fontWeight": "normal",
      "lineHeight": "inherit",
      "textDecoration": "none",
      "textTransform": "none"
    },
    "spacing": {
      "margin": {
        "top": "0px",
        "bottom": "0px",
        "left": "0px",
        "right": "0px"
      },
      "padding": {
        "top": "0px",
        "bottom": "0px",
        "left": "0px",
        "right": "0px"
      },
      "blockGap": "4rem"
    }
  }
}
